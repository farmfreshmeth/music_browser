extends layout

block content
  .pure-g
    form.pure-form(action='/items', method='GET')
      fieldset
        .pure-u-1-1
          input.pure-input-1(name='search_str', value='', placeholder="search..." type='text')

        .pure-u-1-2.pure-u-sm-2-5

          label.pure-radio(for='artist')
            input(id='artist' name='search_target', value='artist', type='radio' checked)
            .radio-label artist

          label.pure-radio(for='item_title')
            input(id='item_title' name='search_target', value='item_title', type='radio')
            .radio-label release title


        .pure-u-1-2.pure-u-sm-2-5

          label.pure-radio(for='track_title')
            input(id='track_title' name='search_target', value='track_title', type='radio')
            .radio-label track title

          label.pure-radio(for='collection_notes')
            input(id='collection_notes' name='search_target', value='collection_notes', type='radio')
            .radio-label collection notes

        .pure-u-1-1
          input.pure-button.pure-button-primary#search(value='search', type='submit')

    div
      h3 Browse Crates & Folders
      each folder in folders
        .pure-u-1.pure-u-md-1-2.pure-u-lg-1-3
          a.folder-tile(href="/items?search_str=" + folder["name_encoded"] + "&search_target=folder")
            .folder-text #{folder['section']}
            .crate-text Crate #{folder['crate']}

  script(src="/javascripts/folders.js")
