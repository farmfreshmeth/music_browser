extends layout

block content

  .search-target #{search_target}
  .search-str #{search_str}
  p #{JSON.stringify(pagination)}

  each release in releases
    .pure-g
      .pure-u-1-1.pure-u-md-1-5
        img.pure-img.thumb(src=release['thumb'])
      .pure-u-1-1.pure-u-md-2-5
        div #{release['artists_sort']}
        .release-title
          a(href="/release/" + release['id']) #{release['title']}
      .pure-u-1-1.pure-u-md-2-5
        each track in release['tracklist']
          .track-sm
            .track-position #{track['position']}
            .track-title #{track['title']}
            .track-duration #{track['duration']}

    .pure-g
      .pure-u-1
        hr
